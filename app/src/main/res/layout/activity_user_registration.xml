<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/home__image_button_register_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_home_black_48dp" />

    <ImageButton
        android:id="@+id/software_help_image_button_register_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_help_black_48dp" />

    <TextView
        android:id="@+id/register_message_register_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/software_help_image_button_register_page"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="Register Here "
        android:textSize="22sp"
        android:textStyle="normal|italic" />

    <EditText
        android:id="@+id/email_edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_edit_text_register_page"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_edit_text_register_page"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/username_edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_edit_text_register_page"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/phone__edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password_edit_text_register_page"
        android:ems="10"
        android:hint="Phone No(+880-1XXXXXXXXX)"
        android:inputType="phone" />

    <EditText
        android:id="@+id/address_edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone__edit_text_register_page"
        android:ems="10"
        android:hint="Address"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/name_edit_text_register_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home__image_button_register_page"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_button_register_page"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Register" />

    <Spinner
        android:id="@+id/select_possition_spinner_register_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_gender_spinner_register_page"
        android:layout_alignStart="@+id/select_gender_spinner_register_page"
        android:layout_below="@+id/select_gender_spinner_register_page"
        android:layout_marginTop="11dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/select_gender_spinner_register_page"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address_edit_text_register_page"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="41dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dialog" />
</RelativeLayout>